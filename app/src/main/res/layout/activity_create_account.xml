<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity"
    android:gravity="center"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:id="@+id/createAccountForm_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar_createAccount_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <AutoCompleteTextView
            android:id="@+id/userNameEditText_createAccount_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textPersonName"
            android:maxLines="1"/>

        <AutoCompleteTextView
            android:id="@+id/emailEditText_createAccount_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/passwordEditText_createAccount_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/createAccountButton_createAccount_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Create Account"
            android:textColor="@color/bck"
            android:background="@android:color/transparent"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
